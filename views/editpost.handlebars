<div class="centerCards">
    <div class="blogCard">
        <p class="cardQuestion">Edit Post</p>
    </div>
    <form class="log" id="edit-form">
        <input type="hidden" id="blog-id" value="{{blog.id}}" />
        <label class="loginInput">Title</label>
        <input class="titleInput" type="text" value="{{blog.title}}" id="title">
        <label class="loginInput">Content</label>
        <textarea class="commentInput" id="content">{{blog.body}}</textarea>
        <button class="loginButton" type="submit" id="updateButton">Update</button>
        <button class="loginButton" type="submit" id="deleteButton">Delete</button>
    </form>
</div>